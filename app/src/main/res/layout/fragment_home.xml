<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/button_round"
        android:backgroundTint="@color/orientalBlue"
        android:layout_marginTop="100dp"

        />

    <Button
        android:id="@+id/fragment_home_button_picture"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toTopOf="@id/fragment_home_text_run"
        android:text="사진 찍기"
        android:background="@drawable/button_round"
        />


    <TextView
        android:id="@+id/fragment_home_text_run"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="110dp"
        android:elevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_home_button_picture"
        android:text="시동 걸기"
        app:layout_constraintBottom_toTopOf="@id/fragment_home_button_run"
        android:gravity="center"
        android:background="@drawable/button_round"
        android:textColor="@color/black"
        android:backgroundTint="@color/gray"
        android:layout_marginTop="40dp"

        />


    <ImageButton
        android:id="@+id/fragment_home_button_run"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="100dp"
        android:elevation="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_home_text_run"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/run"
        android:background="?attr/selectableItemBackgroundBorderless"
        />


</androidx.constraintlayout.widget.ConstraintLayout>